<header class="site-header">
  <span class="site-header__logo-container">
    <a class="site-header__link" href="{{ '/' | url }}">
      <img
        class="site-header__logo"
        src="/static/img/logo.png"
        alt="Логотип"
        width="25px"
        height="25px"
        loading="lazy">
      {{ metadata.title }}
    </a>
  </span>
  <nav class="site-header__nav">
    {% set navPages = collections.all | eleventyNavigation %}
    <ul class="site-header__items">
    {%- for entry in navPages %}
      <li class="site-header__item">
        <a class="site-header__link" href="{{ entry.url | url }}"{% if entry.url == page.url %} data-current="current"{% endif %}>{{ entry.title }}</a>
      </li>
    {%- endfor %}
    </ul>
    <button class="site-header__theme-toggler theme-toggler" id="theme-toggler">
      <svg xmlns="http://www.w3.org/2000/svg" class="theme-toggler__icon icon icon-tabler icon-tabler-moon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
         <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
         <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"></path>
      </svg>
    </button>
  </nav>
</header>
